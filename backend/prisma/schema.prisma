generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

// directUrl is necessary for Prisma's migration service to bypass pgbouncer
// in the OpenShift environment. On your local machine it should be set to
// the same value as url.
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

model applications {
  id       String @id @default(cuid())
  username String @unique @db.VarChar(200)
  email    String @unique @db.VarChar(200)
}
